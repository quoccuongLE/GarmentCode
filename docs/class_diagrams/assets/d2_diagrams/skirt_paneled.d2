# Class definitions with labels
Panel: {
  style.multiple: true
  style.stroke-dash: 5
}

BaseBottoms: {
  style.multiple: true
  style.stroke-dash: 5
}

StackableSkirtComponent: {
  style.multiple: true
  style.stroke-dash: 5
}

# Derived Panel classes
SkirtPanel: {
  shape: class
  __init__(name, waist_length, length, ruffles, match_top_int_to, bottom_cut, flare)
  right: EdgeSequence
  waist: Edge
  left: EdgeSequence
  bottom: Edge
  interfaces: dict
}

ThinSkirtPanel: {
  shape: class
  __init__(name, top_width, bottom_width, length, b_curvature)
  flare: float
  edges: EdgeSequence
  interfaces: dict
}

FittedSkirtPanel: {
  shape: class
  __init__(name, body, design, waist, hips, hips_depth, length, ...)
  add_darts(top, dart_width, dart_depth, dart_position, double_dart)
  interfaces: dict
}

# Derived Component classes
PencilSkirt: {
  shape: class
  __init__(body, design, tag, length, rise, slit)
  front: FittedSkirtPanel
  back: FittedSkirtPanel
  stitching_rules: Stitches
  interfaces: dict
  length()
}

Skirt2: {
  shape: class
  __init__(body, design, tag, length, rise, slit, top_ruffles, min_len)
  front: SkirtPanel
  back: SkirtPanel
  stitching_rules: Stitches
  interfaces: dict
  length()
}

SkirtManyPanels: {
  shape: class
  __init__(body, design, tag, rise, min_len)
  front: ThinSkirtPanel
  subs: list
  stitching_rules: Stitches
  interfaces: dict
  length()
}

# Inheritance relationships
Panel -> SkirtPanel: inherits
Panel -> ThinSkirtPanel: inherits
Panel -> FittedSkirtPanel: inherits

BaseBottoms -> SkirtManyPanels: inherits
StackableSkirtComponent -> PencilSkirt: inherits
StackableSkirtComponent -> Skirt2: inherits
